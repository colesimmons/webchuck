{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "dist",
  },
  "include": ["next-env.d.ts", "src/webchuck.js", "src/webchuck.wasm", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
